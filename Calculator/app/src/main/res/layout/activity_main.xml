<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/txt_cal"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:textAlignment="textEnd"
        android:text="0"
        android:textSize="40dp"
        android:textColor="#323232"
        android:background="#e1e1e1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="20dp"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/btn_ac"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#dedede"
        android:textColor="#141414"
        android:text="AC"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/txt_cal"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="6dp"
        />

    <Button
        android:id="@+id/btn_c"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#dedede"
        android:textColor="#141414"
        android:text="C"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btn_ac"
        app:layout_constraintTop_toTopOf="@id/btn_ac"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/btn_bs"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#dedede"
        android:textColor="#141414"
        android:text="BS"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btn_c"
        app:layout_constraintTop_toTopOf="@id/btn_c"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/btn_divide"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#dedede"
        android:textColor="#141414"
        android:text="/"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btn_bs"
        app:layout_constraintTop_toTopOf="@id/btn_bs"
        android:layout_marginLeft="7dp"
        />


    <Button
        android:id="@+id/btn7"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#efefef"
        android:textColor="#141414"
        android:text="7"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginLeft="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn_ac"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#efefef"
        android:textColor="#141414"
        android:text="8"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        app:layout_constraintTop_toTopOf="@id/btn7"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#efefef"
        android:textColor="#141414"
        android:text="5"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintTop_toTopOf="@id/btn4"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#efefef"
        android:textColor="#141414"
        android:text="2"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        app:layout_constraintTop_toTopOf="@id/btn1"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/btn0"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#efefef"
        android:textColor="#141414"
        android:text="0"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintLeft_toRightOf="@id/btn_negative"
        app:layout_constraintTop_toTopOf="@id/btn_negative"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#efefef"
        android:textColor="#141414"
        android:text="6"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintTop_toTopOf="@id/btn5"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#efefef"
        android:textColor="#141414"
        android:text="3"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        app:layout_constraintTop_toTopOf="@id/btn2"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#dedede"
        android:textColor="#141414"
        android:text="."
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        app:layout_constraintTop_toTopOf="@id/btn0"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/btn9"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#efefef"
        android:textColor="#141414"
        android:text="9"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        app:layout_constraintTop_toTopOf="@id/btn8"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/btn_multi"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#dedede"
        android:textColor="#141414"
        android:text="x"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btn9"
        app:layout_constraintTop_toTopOf="@id/btn9"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#dedede"
        android:textColor="#141414"
        android:text="-"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btn6"
        app:layout_constraintTop_toTopOf="@id/btn6"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#dedede"
        android:textColor="#141414"
        android:text="+"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        app:layout_constraintTop_toTopOf="@id/btn3"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#dedede"
        android:textColor="#141414"
        android:text="="
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/btn_dot"
        app:layout_constraintTop_toTopOf="@id/btn_dot"
        android:layout_marginLeft="7dp"
        />

    <Button
        android:id="@+id/btn4"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#efefef"
        android:textColor="#141414"
        android:text="4"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginLeft="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:backgroundTint="#efefef"
        android:textColor="#141414"
        android:text="1"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginLeft="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_negative"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:layout_marginLeft="4dp"
        android:backgroundTint="#dedede"
        android:text="+/-"
        android:textColor="#141414"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn1" />

</androidx.constraintlayout.widget.ConstraintLayout>